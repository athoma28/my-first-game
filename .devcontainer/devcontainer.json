{
  "name": "GBA Quickstart",
  "build": {
    "dockerfile": "shim/Dockerfile", // Change this to just "Dockerfile" if you're making container edits just for yourself
    "options": ["--platform=linux/amd64"]
  }, 
  "forwardPorts": [8000, 14500],
  "portsAttributes": {
    "8000": {
      "label": "Emulator"
    },
    "14500": {
      "label": "LibreSprite"
    }
  },
  "postCreateCommand": "bash -lc .devcontainer/postCreate.sh",
  "postStartCommand": "bash -lc .devcontainer/postStart.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools-extension-pack",
        "ms-vscode.makefile-tools"
      ],
      "settings": {
        "C_Cpp.intelliSenseEngine": "default",
        "C_Cpp.default.compilerPath": "/opt/devkitpro/devkitARM/bin/arm-none-eabi-g++",
        "C_Cpp.default.intelliSenseMode": "gcc-arm",
        "C_Cpp.default.cppStandard": "c++20",
        "C_Cpp.default.includePath": [
          "${workspaceFolder}/game/include",
          "${workspaceFolder}/game/build",
          "${workspaceFolder}/third_party/butano/butano/include",
          "${workspaceFolder}/third_party/butano/common/include"
        ],
        "C_Cpp.default.defines": [
          "__GBA__"
        ],
        "makefile.configureOnOpen": true,
        "files.associations": {
          "*.h": "cpp"
        },
        "editor.formatOnSave": true,
        "editor.rulers": [100],
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.enablePersistentSessions": true,
        "workbench.editorAssociations": {
          "*.md": "vscode.markdown.preview.editor"
        }
      }
    }
  }
}
